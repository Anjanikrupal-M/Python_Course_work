# Task 1: Twitter Login and Profile Information

# Integer â€“ User ID
user_id = 1001

# String â€“ Username and Email
username = "elonmusk"
email = "elon@x.com"

# Float â€“ Account reputation score
reputation_score = 98.75

# List â€“ List of interests
interests = ["Tech", "Space", "Finance", "Memes"]

# Tuple â€“ Followers and Following count
followers_data = (180000000, 200)

# Set â€“ Verified badges (unique labels)
badges = {"Blue Tick", "Top Influencer", "Business Account"}

# Dictionary â€“ Login credentials (mocked)
login_info = {
    "username": username,
    "email": email,
    "password": ""
}

# Task 2: Display Info Using Formatting Methods

# 1. Comma Separation (sep=',')
print("1. Using Comma Separation (sep=','):")
print("User ID, Username, Email:", user_id, username, email, sep=',')

# 2. Percentage Formatting (% operator)
print("\n2. Using Percentage Formatting (% operator):")
print("Reputation Score: %.2f%%" % reputation_score)

# 3. f-strings
print("\n3. Using f-strings:")
print(f"Username: @{username}")
print(f"Email: {email}")
print(f"Followers: {followers_data[0]} | Following: {followers_data[1]}")
print(f"Badges: {', '.join(badges)}")

# 4. .format() method
print("\n4. Using .format() method:")
print("Login Credentials - Username: {}, Email: {}, Password: {}".format(
    login_info["username"],
    login_info["email"],
    login_info["password"]
))

# Displaying additional info (optional)
print("\nAdditional Info:")
print(f"Interests: {', '.join(interests)}")
